{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ObservationContext",
  "type": "object",
  "additionalProperties": false,
  "required": ["screen", "ocr_view", "structure_view"],
  "properties": {
    "screen": {
      "type": "object",
      "additionalProperties": false,
      "required": ["width", "height"],
      "properties": {
        "width": {
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "region": {
      "type": "object",
      "additionalProperties": false,
      "required": ["x1", "y1", "x2", "y2"],
      "properties": {
        "x1": {
          "type": "number"
        },
        "y1": {
          "type": "number"
        },
        "x2": {
          "type": "number"
        },
        "y2": {
          "type": "number"
        }
      }
    },
    "ocr_view": {
      "type": "object",
      "required": ["pages"],
      "properties": {
        "pages": {
          "type": "array"
        }
      },
      "additionalProperties": true
    },
    "structure_view": {
      "type": "object",
      "required": ["pages"],
      "properties": {
        "pages": {
          "type": "array"
        }
      },
      "additionalProperties": true
    },
    "ui_view": {
      "type": "object",
      "properties": {
        "nodes": {
          "type": "array"
        },
        "xml": {
          "type": "string"
        },
        "error": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  }
}
